<div id="chambre-container" class="col-lg-3 col-12 chambre_box">
    <h4>Chambre #<span id="numero_chambre"></span></h4>
    <hr />
    <div class="field">
    <span>Type de vue</span><br />
         <select id="type_vue" class="form-control type_vue" name="type_de_vue">
      <option value="None">Choississez la vue de votre chambre</option>
            <div style="visibility: hidden"><% TypeVue.all.each do |tc| %></div>
            <option value="<%= tc.type_de_vue %>"><%= tc.type_de_vue %></option>
            <% end %>
       </select>
    </div>

    <div class="field">
     <span>Type de chambre</span><br />
          <select id="type_vue" class="form-control type_chambre" name="type_de_vue">
      <option value="None">Choississez la vue de votre chambre</option>
            <div style="visibility: hidden"><% TypeChambre.all.each do |tc| %></div>
            <option value="<%= tc.type_de_chambre %>"><%= tc.type_de_chambre %></option>
            <% end %>
       </select>
    </div> 

    <div class="field">
        <span>Numero de chambre</span><br />
        <select id="num_chr" class="form-control" name="reservation[list_chambres][]">
        <option value="None">Choississez la chambre</option>
          <div style="visibility: hidden"><% Chambre.all.each do |tc| %></div>
            <option value="<%= tc.numero %>"><%= tc.numero %></option>
            <% end %>
        </select>
    </div>

    <div class="field">
        <span>Prix de la chambre</span><br />
        <p id="prix_par_chambre">
            <span id="price_reservation" class="prix_chambre"></span>
        </p> 
    </div>
</div>

